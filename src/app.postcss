@import './app.css';

/* Write your global styles here, in PostCSS syntax */
@tailwind base;

@layer base {
	div {
		@apply font-mono;
		@apply antialiased;
		@apply dark:text-white;
	}
}

@tailwind components;
@tailwind utilities;

@layer components {
	.header-btn {
		@apply mx-2 w-20 p-1 transition ease-in-out hover:shadow-[0_15px_10px_-8px_rgba(0,0,0,0.3)] dark:bg-transparent dark:hover:shadow-white/70;
	}
}
